---
import { WORK } from '../lib/constants'
import BaseLayout from '../layouts/LayoutWork.astro'
import TopLayout from '../layouts/TopLayout.astro'
import BottomLayout from '../layouts/BottomLayout.astro'

import { EXPERIENCE } from '../lib/constants'
import { ViewTransitions } from 'astro:transitions'
import Timeline from "../components/ui/TimeLine"

---

<BaseLayout title={WORK.TITLE} description={WORK.DESCRIPTION}>
  <ViewTransitions />
  <Timeline client:load/>
</BaseLayout>

<style>
article {
  background-color: hsl(var(--background)); /* 背景颜色 */
  color: #f8f8f380; /* 文字颜色 */
  padding: 20px; /* 内边距 */
  border-radius: 8px; /* 圆角边框 */
  font-family: Arial, sans-serif; /* 字体 */
  margin-bottom: 20px; /* 底部外边距 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

p {
  font-size: 1em; /* 正文字体大小 */
  margin-bottom: 15px; /* 正文下边距 */
}

ol {
  list-style-type: decimal; /* 有序列表样式 */
  padding-left: 20px; /* 列表内边距 */
}

ul {
  list-style-type: disc; /* 无序列表样式 */
  padding-left: 20px; /* 列表内边距 */
}

li {
  margin-bottom: 10px; /* 列表项下边距 */
}
 /* 初始样式 */
 main {
    display: flex;
    min-height: 80vh;
    flex-grow: 1;
    flex-direction: column;
  }

  h2 {
    scroll-margin: 20px;
    border-bottom: 1px solid;
    padding-bottom: 0.5rem; /* 8px */
    font-size: 1.875rem; /* 30px */
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.5px;
    margin-top: 0;
  }

</style>
