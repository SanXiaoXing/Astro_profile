---
import Card from '../Card.astro'
import { Button } from '../ui/button'
import { LINKS } from '../../lib/constants'
import { Github, Mail, Rss, Gitlab } from 'lucide-react'
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faGithub, faGit} from '@fortawesome/free-brands-svg-icons'; // 如果是品牌图标
import { faHouseSignal } from '@fortawesome/free-solid-svg-icons'; //如果是实心图标
import { imageConfig } from 'astro:assets';
import { FlipWords } from "../ui/flip-words"

const words = ["你好，欢迎来到我的博客", "这是我的开心乐园", "这里记录我的技术成长", "努力向上，天天开心啊！"];
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-3">
  <div class="flex h-full w-full">
    <img
      width="300"
      height="300"
      src="/favicon.svg"
      class="pointer-events-none absolute bottom-[-20px] right-[-110px] z-[-1] max-h-[300px] w-auto select-none opacity-50 md:relative md:bottom-auto md:right-auto md:z-auto md:opacity-100 rounded-full"
      alt="memoji of andres plaza"
    />
    <div class="flex flex-col justify-between gap-4 md:max-h-[300px]">
      <div class="flex h-full flex-col" style={{ justifyContent: 'center', display: 'flex', width: '100%', height: '100%' }}>
        <h1 class="hometitle">SanXiaoXing的博客</h1>
      </div>
      <div class="h-[10rem] flex justify-center items-center px-1">
        <FlipWords words={words} duration={2000} className="text-4xl font-simsun" client:load />
      </div>
      <div class="flex gap-4">
        <a href={LINKS.github} aria-label="github profile" target="_blank">
          <Button aria-label="github profile">
            <FontAwesomeIcon icon={faGithub} className="icon"/>
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>
        <a href={LINKS.gitee} aria-label="gitee profile" target="_blank">
          <Button aria-label="gitee profile">
            <!-- <Gitlab /> -->
            <FontAwesomeIcon icon={faGit} className="icon"/>
            <span class="sr-only">Gitee Profile</span>
          </Button>
        </a>
        <a href={LINKS.homepage} aria-label="homepage profile" target="_blank">
          <Button aria-label="homepage profile">
            <!-- <Gitlab /> -->
            <FontAwesomeIcon icon={faHouseSignal} className="icon"/>
            <span class="sr-only">homepage Profile</span>
          </Button>
        </a>
        <a href={LINKS.mail} aria-label="mail profile" target="_blank">
          <Button>
            <Mail />
            <span class="sr-only">Email contact</span>
          </Button>
        </a>
        <a href={LINKS.rss} aria-label="rss profile" target="_blank">
          <Button aria-label="rss profile">
            <Rss />
            <span class="sr-only">Rss Profile</span>
          </Button>
        </a>
      </div>
    </div>
  </div>
</Card>

<style is:global>
  .hometitle {
    font-size: 3rem;
    font-weight: bold;
    font-family: 'Future-mono';
    background: linear-gradient(220.55deg, #FFC328 0%, #E20000 100%);
    background-clip: border-box;
    background-size: 100% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .icon {
    width: 1.5rem; /* 调整为您想要的宽度 */
  }
  .font-simsun {
  font-family: 'SimSun', serif;
  }
</style>
